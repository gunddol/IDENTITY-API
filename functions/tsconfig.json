{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "./", // 최상위 디렉토리로 변경
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/services/secret.ts"],
  "exclude": ["node_modules"]
}
